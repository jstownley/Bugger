<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>


<VBox
        maxHeight="-Infinity"
        maxWidth="-Infinity"
        minHeight="-Infinity"
        minWidth="-Infinity"
        prefHeight="400.0"
        prefWidth="600.0"
        xmlns="http://javafx.com/javafx/8"
        stylesheets="./src/main/resources/css/main.css"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.jonathantownley.bugger.controller.Prefs"
        fx:id="container">
    <children>
        <HBox>
            <children>
                <Label text="Author name: " /><TextField fx:id="authorName" />
            </children>
        </HBox>
        <CheckBox fx:id="showClosed" text="Show Closed Bugs" />
        <CheckBox fx:id="showRejected" text="Show Rejected Bugs" />
        <CheckBox fx:id="showDuplicates" text="Show Duplicate Bugs" />
    </children>
</VBox>
